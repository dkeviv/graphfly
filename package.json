{
  "name": "graphfly",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "workers/*"
  ],
  "scripts": {
    "test": "node --test",
    "check:spec": "node scripts/spec-guardrails.js",
    "spec:map": "node scripts/spec-map-generate.js",
    "preflight:prod": "node scripts/preflight-prod.js",
    "dev:api": "node apps/api/src/server.js",
    "dev:web": "node apps/web/dev-server.js",
    "dev:website": "node website/dev-server.js",
    "dev:all": "node scripts/dev-all.js",
    "dev:all:pg": "node scripts/dev-all.js --pg",
    "worker:indexer": "node workers/indexer/src/queue-runner.js",
    "worker:doc": "node workers/doc-agent/src/queue-runner.js",
    "worker:graph": "node workers/graph-agent/src/queue-runner.js",
    "local:run": "node apps/cli/src/graphfly.js local-run",
    "pg:migrate": "node apps/cli/src/graphfly.js pg-migrate",
    "index:mock": "node workers/indexer/src/mock-indexer.js",
    "ingest:mock": "node workers/indexer/src/mock-index-and-ingest.js"
  }
}
